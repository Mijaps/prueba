@using Arenas_IIU.Models
@{
    Layout = null;
    ViewBag.title = "Examen II Unidad";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.title</title>
    <link rel="shortcut icon" href="~/Img/upt.png">
    <link href="~/Assets/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/Assets/highcharts/highcharts.js"></script>
    <script src="~/Assets/highcharts/exporting.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="~/Ejercicio01/Index">
                    <div class="d-flex align-items-center">
                        <img src="~/Img/upt.png" alt="" width="30" height="24" class="d-inline-block align-text-top img-fluid rounded-circle">
                        <span class="fw-bold">@ViewBag.title</span>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @Html.ActionLink("Categorias", "Index", "Categorias", null, new { @class = @Html.IsActive("Categorias", "Index") })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Productos ", "Index", "Productos", null, new { @class = @Html.IsActive("Productos", "Index") })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Kardex", "Index", "Kardex", null, new { @class = @Html.IsActive("Kardex", "Index") })
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer class="col-12 text-center text-secondary p-2">
            <hr />
            &copy; @DateTime.Now.Year | Miguel Arenas | Web II &copy;
        </footer>
    </div>
    <script src="~/Assets/js/bootstrap.min.js"></script>
</body>
</html>